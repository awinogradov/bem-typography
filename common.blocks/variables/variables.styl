$rem_base  = 16px;
$line_base = 20px;
$font_size = 14px;

// FAMILIES
$font_family         = Helvetica, Arial, sans-serif;
$heading_font_family = $font_family;
$heading_font_weight = 500;

// HEADINGS
// step is 0.375rem = 6px
$h1_scale = 3;
$h2_scale = 2.625;
$h3_scale = 2.25;
$h4_scale = 1.875;

// PARAGRAPHS
$p_scale = 1.25; // lead mod

// BLOCKQUOTES
$q_scale = 1.25;
